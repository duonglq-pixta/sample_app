<% provide(:title, t("sessions.new.title")) %>
<h1><%= t("sessions.new.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email, t("forms.labels.email") %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t("forms.labels.password") %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to t("sessions.new.forgot_password"), new_password_reset_path %>

      <%= f.label :remember_me, class: 'checkbox inline' do %>
        <%= f.check_box :remember_me %>
        <span><%= t("forms.labels.remember_me") %></span>
      <% end %>

      <%= f.submit t("forms.buttons.login"), class: 'btn btn-primary' %>
    <% end %>

    <p><%= t("sessions.new.new_user_prompt") %> <%= link_to t("sessions.new.signup_link"), signup_path %></p>
  </div>
  
</div>


